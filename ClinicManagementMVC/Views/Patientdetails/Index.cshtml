@model IEnumerable<ClinicManagementMVC.Models.Patientdetails>

@{
    ViewData["Title"] = "Index";
}

<h2>Patient Details <a class="btn btn-danger float-right" href="~/Home/Index">LogOut</a></h2>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PatientID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sex)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date_of_Birth)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.reason)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PatientID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sex)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date_of_Birth)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.reason)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.PatientID">Edit</a> |
                <a class="btn btn-outline-secondary" asp-action="Details" asp-route-id="@item.PatientID">Details</a> |
                <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.PatientID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
<table>
    <tr>
        <a class="btn btn-info" href="~/Patientdetails/Create"> New Patient Entry</a>
    </tr>
    
    <tr>
        &nbsp;&nbsp;&nbsp;&nbsp;
        <a class="btn btn-secondary " href="~/Logins/Success">Back to Menu</a>
    </tr>
</table>
