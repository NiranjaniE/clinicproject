@model IEnumerable<ClinicManagementMVC.Models.Appointmentfixing>

@{
    ViewData["Title"] = "Index";
}

<h2>Appointment Fixing <a class="btn btn-danger float-right" href="~/Home/Index">LogOut</a></h2>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PatientID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SpecializationRequired)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DoctorName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VisitDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VisitTime)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.PatientID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SpecializationRequired)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DoctorName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.VisitDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.VisitTime)
                </td>
                <td>
                    <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.AppointmentId">Edit</a> |
                    <a class="btn btn-outline-secondary" asp-action="Details" asp-route-id="@item.AppointmentId">Details</a> |
                    <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.AppointmentId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<table>
    <tr>
        <a class="btn btn-info" href="~/Appointmentfixings/Create">Create New Appointment</a>
    </tr>

    <tr>
        &nbsp;&nbsp;&nbsp;&nbsp;
        <a class="btn btn-secondary " href="~/Logins/Success">Back to Menu</a>
    </tr>
</table>

